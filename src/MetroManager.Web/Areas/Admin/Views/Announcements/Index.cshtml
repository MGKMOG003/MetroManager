@model System.Collections.Generic.List<MetroManager.Domain.Entities.Announcement>
@{
    ViewData["Title"] = "Manage Announcements";
}
<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Announcements</h2>
        <a class="btn btn-primary" href="@Url.Action("Create")">New Announcement</a>
    </div>
    <table class="table table-striped">
        <thead><tr><th>Title</th><th>Category</th><th>Published</th><th>Pinned</th><th></th></tr></thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Title</td>
                    <td>@a.Category</td>
                    <td>@a.PublishedUtc.ToLocalTime()</td>
                    <td>@(a.IsPinned ? "Yes" : "No")</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", new { id = a.Id })">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete", new { id = a.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

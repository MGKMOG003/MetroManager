@model MetroManager.Domain.Entities.Announcement
<div class="row g-3 mb-3">
    <div class="col-md-8">
        <label class="form-label">Title</label>
        <input class="form-control" asp-for="Title" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Category</label>
        <input class="form-control" asp-for="Category" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Published (UTC)</label>
        <input class="form-control" asp-for="PublishedUtc" type="datetime-local" value="@Model.PublishedUtc.ToString("yyyy-MM-ddTHH:mm")" />
    </div>
    <div class="col-md-6 form-check mt-4">
        <input class="form-check-input" type="checkbox" asp-for="IsPinned" />
        <label class="form-check-label" for="IsPinned">Pinned</label>
    </div>
    <div class="col-12">
        <label class="form-label">Summary</label>
        <textarea class="form-control" asp-for="Summary" rows="2"></textarea>
    </div>
    <div class="col-12">
        <label class="form-label">Body</label>
        <textarea class="form-control" asp-for="Body" rows="4"></textarea>
    </div>
    <div class="col-md-6">
        <label class="form-label">Link</label>
        <input class="form-control" asp-for="Link" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Media URL</label>
        <input class="form-control" asp-for="MediaUrl" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Expires (UTC)</label>
        <input class="form-control" asp-for="ExpiresUtc" type="datetime-local" value="@(Model.ExpiresUtc?.ToString("yyyy-MM-ddTHH:mm"))" />
    </div>
</div>

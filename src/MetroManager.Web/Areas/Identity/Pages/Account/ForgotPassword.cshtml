@page
@model MetroManager.Web.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

<div class="container py-5">
    <div class="row g-4 justify-content-center">
        <div class="col-lg-6 col-md-8">
            <h1 class="h3 mb-3">@ViewData["Title"]</h1>
            <p class="text-muted">Enter your email address. If an account exists, we’ll send a reset link.</p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Send reset link</button>
                <a class="btn btn-link" asp-page="./Login">Back to sign in</a>
            </form>

            @if (Model.InfoMessage is not null)
            {
                <div class="alert alert-info mt-3">@Model.InfoMessage</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model MetroManager.Web.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Sign in";
}

<div class="container py-5">
    <div class="row g-4">
        <!-- Login form -->
        <div class="col-md-7 col-lg-6">
            <h1 class="h3 mb-3">Sign in</h1>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe"></label>
                </div>

                <button type="submit" class="btn btn-primary">Sign in</button>

                <div class="mt-3">
                    <a asp-page="./Register">Create an account</a>
                    |
                    <a asp-page="./ForgotPassword">Forgot your password?</a>
                </div>
            </form>
        </div>

        <!-- Demo credentials panel -->
        <div class="alert alert-secondary mt-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <strong>Demo credentials</strong> (for local testing)
                    <div class="small text-muted">These are created at startup if they don’t exist.</div>
                </div>
                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#demoCreds">
                    Show
                </button>
            </div>
            <div id="demoCreds" class="collapse mt-2">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="p-2 border rounded bg-white">
                            <div class="fw-semibold">Admin</div>
                            <div class="small mb-1 text-muted">Full access, admin dashboard</div>
                            <code>admin@metro.local</code><br />
                            <code>P@ssw0rd!23</code>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-2 border rounded bg-white">
                            <div class="fw-semibold">New User</div>
                            <div class="small text-muted">Register any email → auto “Client” role → client dashboard</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

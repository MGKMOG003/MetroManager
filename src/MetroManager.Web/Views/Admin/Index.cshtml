@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="row g-3">
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-muted">Tickets</div>
            <div class="h3">@Model.Tickets</div>
            <a class="btn btn-sm btn-outline-primary" asp-controller="Admin" asp-action="Tickets">Manage tickets</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-muted">Open tickets</div>
            <div class="h3">@Model.Open</div>
            <a class="btn btn-sm btn-outline-primary" asp-controller="Admin" asp-action="Tickets" asp-route-status="0">See open</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-muted">Announcements</div>
            <div class="h3">@Model.Announcements</div>
            <a class="btn btn-sm btn-outline-primary" asp-controller="Admin" asp-action="Announcements">Manage announcements</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card p-3">
            <div class="text-muted">Events</div>
            <div class="h3">@Model.Events</div>
            <a class="btn btn-sm btn-outline-primary" asp-controller="Admin" asp-action="Events">Manage events</a>
        </div>
    </div>
</div>

@model MetroManager.Web.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Welcome | Municipal Services";
}

@section Styles {
    <style>
        :root {
            --navy: #0B1D39;
            --navy-900: #08142A;
            --sky: #E6F3FF;
            --orange: #FF8A00;
            --muted: #6C7A8A;
            --paper: #fff;
            --line: #E9EEF7;
            --beige: #F7F3EF;
            --tile: #fff;
            --tile-border: #E7E0D9;
            --glow: 0 10px 30px rgba(11,29,57,.12)
        }

        body {
            background: var(--beige);
            color: var(--navy)
        }

        .hero {
            border-radius: 20px;
            background: radial-gradient(1000px 380px at -10% -10%,var(--sky),transparent 60%),linear-gradient(180deg,#fff 0%,#FAFBFE 100%);
            border: 1px solid var(--line);
            overflow: hidden;
            box-shadow: var(--glow);
            position: relative
        }

            .hero::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 6px;
                background: linear-gradient(90deg,var(--orange),#FFC470)
            }

        .hero-copy h1 {
            letter-spacing: .2px
        }

        .lead-muted {
            color: var(--muted)
        }

        .btn-navy {
            background: var(--navy);
            color: #fff;
            border: 0;
            box-shadow: 0 6px 16px rgba(11,29,57,.25);
            transition: transform .12s,box-shadow .2s,background .2s
        }

            .btn-navy:hover {
                background: var(--navy-900);
                transform: translateY(-1px)
            }

        .btn-outline-navy {
            border-color: var(--navy);
            color: var(--navy)
        }

            .btn-outline-navy:hover {
                background: var(--navy);
                color: #fff
            }

        .hero-img {
            width: 100%;
            max-width: 520px;
            margin-left: auto;
            filter: drop-shadow(0 20px 40px rgba(11,29,57,.18));
            animation: floatY 6s ease-in-out infinite
        }

        .section {
            margin-top: 2.25rem
        }

        .feature-card {
            background: var(--tile);
            border: 1px solid var(--tile-border);
            border-radius: 16px;
            padding: 1.25rem;
            height: 100%;
            transition: transform .18s,box-shadow .18s,border-color .18s
        }

            .feature-card:hover {
                transform: translateY(-3px);
                box-shadow: var(--glow);
                border-color: #e2d8cf
            }

        .icon {
            width: 44px;
            height: 44px;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: #FFF3E6;
            color: var(--orange);
            font-size: 1.1rem
        }

        .muted {
            color: var(--muted)
        }

        .pill {
            display: inline-block;
            font-size: .75rem;
            padding: .25rem .55rem;
            border-radius: 999px;
            background: #EEF3FB;
            color: #345
        }

        .kpis {
            display: grid;
            grid-template-columns: repeat(3,1fr);
            gap: .75rem
        }

        .kpi {
            background: var(--tile);
            border: 1px solid var(--tile-border);
            border-radius: 12px;
            padding: .9rem 1rem;
            display: flex;
            align-items: center;
            gap: .75rem;
            transition: transform .18s,box-shadow .18s
        }

            .kpi:hover {
                transform: translateY(-2px);
                box-shadow: var(--glow)
            }

            .kpi .value {
                font-weight: 800;
                font-size: 1.05rem;
                color: var(--navy)
            }

            .kpi .label {
                color: var(--muted);
                font-size: .92rem
            }

            .kpi .kpi-icon {
                width: 40px;
                height: 40px;
                border-radius: 10px;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                background: #F2F6FF;
                color: var(--navy);
                font-size: 1.05rem
            }

        .divider {
            height: 1px;
            background: var(--tile-border);
            margin: 1.25rem 0
        }
        @@keyframes floatY {
            0%

        {
            transform: translateY(0) rotate(-.3deg)
        }

        50% {
            transform: translateY(-10px) rotate(.3deg)
        }

        100% {
            transform: translateY(0) rotate(-.3deg)
        }

        }
        @@media (max-width:991.98px) {
            .hero-img

        {
            max-width: 420px;
            margin: 0 auto
        }

        .kpis {
            grid-template-columns: 1fr
        }

        }
    </style>
}

<div class="container py-4">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        if (User.IsInRole("Admin"))
        {
            <div class="alert alert-info d-flex align-items-center justify-content-between">
                <div>You are signed in as <strong>Admin</strong>.</div>
                <a class="btn btn-primary" asp-controller="Admin" asp-action="Index">Go to Admin Dashboard</a>
            </div>
        }
        else if (User.IsInRole("Client"))
        {
            <div class="alert alert-success d-flex align-items-center justify-content-between">
                <div>You are signed in as <strong>Client</strong>.</div>
                <a class="btn btn-primary" asp-controller="Dashboard" asp-action="Index">Go to Client Dashboard</a>
            </div>
        }
        else
        {
            <div class="alert alert-secondary">
                You are signed in as <strong>Public User</strong>.
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning d-flex align-items-center justify-content-between">
            <div>You are not signed in.</div>
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
        </div>
    }
</div>

<!-- Hero -->
<div class="hero p-4 p-lg-5">
    <div class="row align-items-center g-4">
        <div class="col-lg-6 hero-copy">
            <span class="pill mb-2 d-inline-block">Citizen-first • South Africa</span>
            <h1 class="fw-bold mb-2">Welcome to the Municipal Services App</h1>
            <p class="lead lead-muted mb-3">Report issues, stay informed, and track requests — improving municipal responsiveness and trust.</p>
            <div class="d-flex align-items-center gap-2">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-lg btn-navy">Sign in</a>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-lg btn-outline-navy">Create account</a>
            </div>
        </div>
        <div class="col-lg-6 hero-img-wrap">
            <img class="hero-img" src="~/images/metromanager-hero.png" alt="City skyline with service icons" />
        </div>
    </div>
</div>

<!-- Action Tiles -->
<section class="section">
    <div class="kpis">
        <a class="kpi text-decoration-none" asp-controller="Issue" asp-action="Create">
            <div class="kpi-icon"><i class="bi bi-flag"></i></div>
            <div>
                <div class="value">Report Issues</div>
                <div class="label">Keep our communities safe</div>
            </div>
        </a>
        <button type="button" class="kpi btn p-0 text-start" onclick="alert('Events & Notices is under development.')">
            <div class="kpi-icon"><i class="bi bi-calendar-event"></i></div>
            <div>
                <div class="value">Events & Notices</div>
                <div class="label">Coming soon</div>
            </div>
        </button>
        <button type="button" class="kpi btn p-0 text-start" onclick="alert('Service Requests are under development.')">
            <div class="kpi-icon"><i class="bi bi-clipboard-check"></i></div>
            <div>
                <div class="value">Service Requests</div>
                <div class="label">Coming soon</div>
            </div>
        </button>
    </div>
</section>

<!-- Announcements -->
<section class="section">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="fw-bold m-0">Announcements</h2>
        <span class="pill">Latest updates</span>
    </div>

    @if (Model != null && Model.Announcements.Any())
    {
        <div class="row g-3">
            @foreach (var a in Model.Announcements)
            {
                <div class="col-md-6 col-lg-4">
                    <article class="feature-card h-100">
                        @if (a.IsPinned)
                        {
                            <span class="pill mb-2 d-inline-block">Pinned</span>
                        }
                        <h3 class="h6 fw-bold">@a.Title</h3>
                        <p class="muted mb-2">@a.Summary</p>
                        <small class="text-muted">@a.PublishedUtc.ToLocalTime().ToString("dd MMM yyyy")</small>
                    </article>
                </div>
            }
        </div>
    }
    else
    {
        <div class="feature-card">
            <p class="muted mb-0">No announcements yet. Check back soon.</p>
        </div>
    }
</section>

@if (TempData["IssueSuccess"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <script> alert('@ok'.replace(/'/g, "\\'")); </script>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
}

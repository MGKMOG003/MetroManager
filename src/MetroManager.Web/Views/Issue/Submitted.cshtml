@{
    Layout = "_Layout";
    ViewData["Title"] = "Submitting…";
}

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height:45vh">
    <div class="spinner-border" role="status" style="width:3.5rem;height:3.5rem;"></div>
    <div class="mt-3 fs-5">All set! Redirecting to your dashboard…</div>
</div>

@section Scripts {
    <script>
        // short pause for a pleasant animation, then go to Dashboard
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Dashboard")';
        }, 900);
    </script>
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MetroManager</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MetroManager.Web.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">
    <header class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">MetroManager</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topnav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <nav id="topnav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            }
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        }
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Events" asp-action="Index">Events</a>
                    </li>

                    @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Client"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Issue" asp-action="Create">Report Issue</a>
                        </li>
                    }
                </ul>

                <div class="d-flex">
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </div>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3">
        <div class="container small text-muted">
            &copy; @DateTime.Now.Year - MetroManager
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if ((TempData["IssueSubmitted"] as string) == "1")
    {
        <script>
            window.addEventListener('DOMContentLoaded', function () {
                alert('Thanks! Your issue was submitted successfully.');
            });
        </script>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>

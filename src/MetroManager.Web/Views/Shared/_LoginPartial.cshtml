@using Microsoft.AspNetCore.Identity
@using MetroManager.Infrastructure.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="navbar-text">Hello, @User.Identity?.Name!</span>
        </li>
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home")"
                  method="post" class="d-inline">
                <button type="submit" class="nav-link btn btn-link">Sign out</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Sign in</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
    }
</ul>

